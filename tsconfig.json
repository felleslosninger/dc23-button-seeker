{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "moduleResolution": "bundler",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react",
        "typeRoots": [ "node_modules/@types" ]
    },

    "entryPoints": [
        "./src/*",
        "./src/htmlParser/*",
        //"./src/htmlTableBar/",
        "./src/messageObjects/*",
        "./src/sidebar/*"
      ]
}

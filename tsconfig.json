{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "moduleResolution": "bundler",
        "module": "esnext",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react",
        "moduleResolution": "node",
        "typeRoots": [ "node_modules/@types" ]
    },
    "exclude": [
        "node_modules",
        "__tests__" // Corrected directory name for test files
    ],
    "typedocOptions": {
        "entryPoints": [
            "./src/**/*"
        ]
    }
}
